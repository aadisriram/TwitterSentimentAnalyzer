extends layout

block content
  h1= title
  div#tweetcontainer
    div.progress
      div.progress-bar.progress-bar-success.progress-bar-striped.active#proglove(role='progressbar', aria-valuenow='100', aria-valuemax='100', aria-valuemin='0', style='width:100%;')
      div.progress-bar.progress-bar-danger.progress-bar-striped.active#proghate(role='progressbar', aria-valuenow='0', aria-valuemax='100', aria-valuemin='0', style='width:0%;')
    table.table.table-striped
      thead
        tr
          th(colspan='2')
            h1 Total Tweets
          th(colspan='2')
            h1#totalcount
      tbody
        tr
          td
            h3 Number of Tweets with 'Love'
          td
            h3#counterlove.
              0
          td
            h3 Number of Tweets with 'Hate'
          td
            h3#counterhate.
              0
        tr
          td
            h3 Percentage Love
          td
            h3#perclove
          td
            h3 Percentage Hate
          td
            h3#perchate

    div.col-md-6#tweetlove
      h3 Tweets with the word love
      ul.list-group
    div.col-md-6#tweethate

      h3 Tweets with the word hate
      ul.list-group